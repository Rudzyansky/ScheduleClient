<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/labelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Current group: " />

    <TextView
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/labelName"
        android:text="group" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/version"
        android:layout_alignBaseline="@+id/labelVersion"
        android:layout_alignBottom="@+id/labelVersion"
        android:layout_alignEnd="@+id/group" />

    <TextView
        android:text="Current version:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/labelVersion"
        android:layout_below="@+id/labelName"
        android:layout_alignParentStart="true" />
</RelativeLayout>
